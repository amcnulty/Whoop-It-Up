<div class="container create-events-page main-container">
  {{> header }}
  <div class="wrapper">
    <div class="site-logo"></div>
    <h2 class="fun-font">Create event</h1>
    <div class="controls">
      <span class="hidden error error-name">Please provide an event name</span>
      <input class="event-name" type="text" placeholder="Event Name">
      <input id="event-date" class="event-date" type="text" placeholder="Event Date">
      <input class="start-time" type="text" placeholder="Start Time">
      <input class="location" type="text" placeholder="Location">
      <textarea class="event-desc"></textarea>
      <input type="text" class="invite" placeholder="Who to invite">
      <button type="button" class="btn btn-outline-primary create-btn">Create Event</button>
    </div>
  </div>
</div>
