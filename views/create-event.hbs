<div class="container-fluid create-events-page main-container">
  {{> header }}
  <div class="region top-region"></div>
  <div class="wrapper">
    <div class="site-logo"></div>
    <h2 class="fun-font">Create event</h1>
    <div class="controls">
      <input type="hidden" class="place-id" value="">
      <input type="hidden" class="latlong" value="">
      <input type="hidden" class="formatted-addy" value="">
      {{#if user}}
        <input type="hidden" class="host-name" value="{{user.username}}">
        <input type="hidden" class="host-id" value="{{user.id}}">
      {{/if}}
      <span class="hidden error error-name">Please provide an event name</span>
      <input class="event-name" type="text" placeholder="Event Name">
      <input id="event-date" class="event-date" type="text" placeholder="Event Date">
      <input class="start-time" type="text" placeholder="Start Time">
      <input class="location" type="text" placeholder="Location">
      <div class="hidden address-suggest-div"> 
        <input type="checkbox" class="suggest-cb"><span class="label">Did you mean: </span><span class="address-suggest"></span>
      </div>
      <textarea class="event-desc"></textarea>
      <div class="is-private"><input type="checkbox" class="is-private-cb"><span class="label">This is a private event</span></div>
      <div class="category-section">
      {{#each categories}}
        <div class="category-item">
          <input id="{{categoryname}}-cb" class="event-category" type="checkbox" value="{{id}}">
          <label class="category-label" for="{{categoryname}}-cb">{{categoryname}}</label>
        </div>
      {{/each}}
      </div>
      <button type="button" class="btn btn-outline-primary create-btn">Create Event</button>
    </div>
  </div>
  <div class="region bottom-region flip-bkg"></div>
</div>
