<div class="container-fluid profile-page main-container">
  {{> header }}
  <div class="region top-region"></div>
  <div class="wrapper">
    <div class="current-avatar avatar avatar-{{avatar}}" data-id="{{avatar}}"></div>

      <!-- Nav tabs -->
      <ul class="nav nav-tabs" id="profile-tabs" role="tablist">
        <li class="nav-item">
          <a class="nav-link tab-profile active" data-toggle="tab" href="#profile" role="tab">Profile</a>
        </li>
        <li class="nav-item">
          <a class="nav-link tab-yours" data-toggle="tab" href="#yours" role="tab">Hosting</a>
        </li>
        {{#if canEdit}}
          <li class="nav-item">
            <a class="nav-link tab-events" data-toggle="tab" href="#events" role="tab">Invites</a>
          </li>
        {{/if}}
      </ul>

      <!-- Tab panes -->
      <div class="tab-content">
        <div class="tab-pane active" id="profile" role="tabpanel">
          {{#if canEdit}}
            {{> edit_profile }}
          {{else}}
            <div class="info-row">
              <h2 class="username fun-font">{{username}}</h2>
              <div class="email fun-font">{{email}}</div>
            </div>
          {{/if}}
        </div>
        <div class="tab-pane" id="yours" role="tabpanel">
          <div class="yours-section">
            <h3 class="fun-font">Events By {{#if canEdit}}You{{/if}} {{#unless canEdit}}{{username}}{{/unless}}</h3>
            {{#unless hosting}}
              <div><p>No Events Found</p></div>
            {{/unless}}
            {{#each hosting}}
              {{> hosting_row }}
            {{/each}}
            
            {{#if canEdit}}
              <button type="button" class="btn btn-outline-success create-btn">Create Event</button>
            {{/if}}  
          </div>
        </div>

        {{#if canEdit}}
          <div class="tab-pane" id="events" role="tabpanel">
            <div class="event-section">
              <h3 class="fun-font">Upcoming Events</h3>
              {{#unless invites}}
                <div><p>No Events Found</p></div>
              {{/unless}}
              {{#each invites}}
                {{> invite_row }}
              {{/each}}
                <button type="button" class="btn btn-outline-success find-btn">Find Events</button>
            </div>
          </div>
        {{/if}}
      </div>
  </div>
  <div class="region bottom-region flip-bkg"></div>
</div>
