<div class="container-fluid find-events-page main-container">
  {{> header }}
  <div class="region top-region"></div>
  <div class="wrapper">
    <div class="site-logo"></div>
    <h2 class="fun-font">What are you looking for?</h1>
    <div class="controls">
      <!--<h2 id="eventResult" class="error"></h2>-->
      <!-- <input class="event-search-box" type="text" placeholder="Event Name"> -->
      <div class="advance-filters">
        <div class="category-section">
          {{#each categories}}
            <div class="category-item">
              <input id="{{categoryname}}-cb" checked class="event-category" type="checkbox" value="{{id}}">
              <label class="category-label" for="{{categoryname}}-cb">{{categoryname}}</label>
            </div>
          {{/each}}
        </div>
      </div>
      <button type="button" class="btn btn-outline-primary find-btn">Find Events</button>
    </div>
  </div>
  <div class="region bottom-region flip-bkg"></div>
</div>
