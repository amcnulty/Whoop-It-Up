<div class="row site-header nav">
  <div class="home-link"><a class="gohome" href="/"><i class="fa fa-home" aria-hidden="true"></i> Home</a></div>
  <div class="login-signup">
    <ul>
      <li><a class="sign-in" data-toggle="modal" data-target="#header-signin" href="#">Sign in</a></li>
      <li><a class="sign-up" href="/signup">Sign up</a></li>
    </ul>
  </div>
</div>

<div id="header-signin" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
      {{#if signIn}}
        <i class="fa fa-user" aria-hidden="true"></i>Hello! <a href="//profile/getUser/{{signIn.id}}">{{signIn.username}}</a>
        <a href="">Log out</a>
      {{else}}
        <h3 class="modal-title fun-font"><i class="fa fa-sign-in" aria-hidden="true"></i> Sign In</h3>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      {{/if}}
      </div>
      <div class="modal-body">
        <input class="email" type="text" placeholder="Email">
        <input class="password" type="password" placeholder="Password">
        <h2 id="signInResult" class="error"></h2>
        <a class="forgot-pw" href="/password-reset">Forgot password?</a>
        <button type="button" id="signInBtn" class="signInBtn btn btn-primary">Sign In</button>
      </div>
    </div>
  </div>
</div>
